{% extends 'base.html.twig' %}

{% block title %}Edit
	{{ random_table.TableName}}
{% endblock %}
{% block stylesheets %}
{{ encore_entry_link_tags('newtable') }}
	{# <link rel="stylesheet" href="{{ asset('styles/newtable/newtable.css') }}"> #}
{% endblock %}

{% block body %}
	<section>
		<h2> Editing <strong>{{ random_table.TableName}}</strong> </h2>
