            <p>Table type : {{ random_table.TableType }}</p>
            <p>Color theme : {{ random_table.Theme }}</p>
        </div>
		<div class="example-wrapper">
			{{ include('random_tables_crud/_form.html.twig', {'button_label': 'Update'}) }}
		</div>
        <a id="back" href="{{ path('app_random_tables_crud_index') }}">back to list</a>
		<div id="delete">
		    {{ include('random_tables_crud/_delete_form.html.twig') }}
        </div>
	</section>


