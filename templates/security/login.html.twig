{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}
{% block stylesheets %}
	{# <link rel="stylesheet" href="{{ asset('styles/register/register.css') }}"> #}
	{{ encore_entry_link_tags('register') }}

{% endblock %}

